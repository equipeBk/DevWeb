<!DOCTYPE html>
<html>
    <head>
        <title>Express - Basic Auth</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>

        <h1>user: <%= loggedUser.username %></h1>
        <h2>Product List</h2>
        <div>
            <table>
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Price</td>
                        <td>description</td>
                        <td>Category</td>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < products.length; i++) {%>
                       <tr>
                            <td>
                                <%= products[i]._id %> 
                            </td>
                            <td>
                                <%= products[i].name %> 
                            </td>
                            <td>
                                <%= products[i].price.toFixed(2) %> 
                            </td>
                            <td> <%=products[i].description %></td>
                            
                            <td> <%= products[i].category %> </td>
                       </tr> 
                    <% } %> 
                </tbody>
            </table> 
        </div>

        <a href="http://localhost:3000">home</a>

       
    </body>
</html>