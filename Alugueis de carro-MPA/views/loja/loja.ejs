   <main>
    <h1>Carros Cadastrados</h1>
    <form action="/busca" method="post">
        busca:<input type="text" name="busca">
    </form>
        <table>
            <thead>
                <tr>
                    <td>Foto</td>
                    <td>Nome</td>
                    <td>Marca</td>
                    <td>Cor</td>
                    <td>Valor</td>
                    <td>Pre√ßo da diaria</td>
                    <td>Status</td>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < carros.length; i++) {%>
                    <tr>
                        <td>
                            <img src="<%= carros[i].imagem %>" alt="carro" width="300px">
                        </td>
                        <td>
                            <%= carros[i].nome %>
                        </td>
                        <td>
                            <%= carros[i].marca %>
                        </td>
                        <td>
                            <%=carros[i].cor %>
                        </td>

                        <td>
                            <%= carros[i].valor %>
                        </td>
                        <td>
                            <%= carros[i].precoDiaria %>
                        </td>
                        <td>
                            <%= carros[i].status %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
   </main>

